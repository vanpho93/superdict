{
  "name": "core-server",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Pho Nguyen <pho.nguyenvan@nashtechglobal.com>",
  "license": "MIT",
  "scripts": {
    "start": "node dist/src/index.js",
    "dev": "concurrently yarn:dev-*",
    "dev-ts": "tsc -w",
    "tsc": "tsc",
    "node-runner": "node --require dotenv/config dist/src/index.js",
    "dev-nodemon": "nodemon --exec yarn node-runner -e ts",
    "mocha-runner": "DOTENV_CONFIG_PATH=test.env mocha dist/**/*.test.js -e js --recursive",
    "test": "concurrently yarn:test-*",
    "testw": "set DOTENV_CONFIG_PATH=test.env&&nodemon --exec mocha dist/**/*.test.js -e js --recursive",
    "test-ts": "tsc -w",
    "test-nodemon": "nodemon --exec yarn mocha-runner -e ts",
    "coverage-test": "DOTENV_CONFIG_PATH=test.env nyc mocha src/**/*.test.ts -e ts --recursive -w",
    "play": "nodemon --require dotenv/config --exec ts-node src/play.ts"
  },
  "dependencies": {
    "aws-sdk": "^2.481.0",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "camelcase-keys": "^5.2.0",
    "cors": "^2.8.5",
    "cron": "^1.7.2",
    "decamelize": "^6.0.0",
    "dotenv": "^8.0.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.16.5",
    "lodash": "^4.17.11",
    "multer": "^1.4.1",
    "node-fetch": "^2.6.0",
    "pg": "^8.7.3",
    "qs": "^6.9.1",
    "redis": "^2.8.0"
  },
  "devDependencies": {
    "@sentry/node": "^5.5.0",
    "@types/bcrypt": "^3.0.0",
    "@types/bluebird": "^3.5.26",
    "@types/body-parser": "^1.17.0",
    "@types/cors": "^2.8.5",
    "@types/cron": "^1.7.1",
    "@types/decamelize": "^3.0.3",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/lodash": "^4.14.129",
    "@types/mocha": "^9.1.1",
    "@types/multer": "^1.3.7",
    "@types/node": "^18.6.4",
    "@types/node-fetch": "^2.3.4",
    "@types/pg": "^7.4.14",
    "@types/qs": "^6.9.0",
    "@types/redis": "^2.8.13",
    "@types/supertest": "^2.0.7",
    "@types/uuid": "^3.4.4",
    "@types/validator": "^10.11.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "source-map-support": "^0.5.12",
    "supertest": "^4.0.2",
    "testdouble": "^3.12.2",
    "ts-node": "^8.1.0",
    "typescript": "^4.5.4"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "text"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true,
    "check-coverage": true,
    "exclude": [
      "src/**/*.test.ts"
    ]
  },
  "mocha": {
    "full-trace": true,
    "require": [
      "dotenv/config",
      "ts-node/register",
      "source-map-support/register"
    ],
    "bail": true,
    "timeout": 10000
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
