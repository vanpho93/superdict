{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es2017"],
    "types": ["node", "mocha"],
    "outDir": "./dist",
    "strict": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": [
        "./typescript/*"
      ]
    },
    "esModuleInterop": true
  },
  "exclude": ["node_modules"]
}
